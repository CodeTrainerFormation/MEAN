<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/dist/css/main.css">
  </head>
  <body>

    <% include shared/menu %>

    <div class="container">

      <div class="list-group">
        <div class="list-group-item">
          <form method="post" class="form-horizontal">
            <div class="form-group">
              <label>Tweet</label>
              <textarea name="tweet" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <label>Utilisateur</label>
              <input type="text" name="username"
                      class="form-control"
                      value="<%= username %>">
            </div>
            <div class="input-group">
              <button type="submit" class="btn btn-primary">Tweeter</button>
            </div>
          </form>
        </div>
        <% tweets.forEach(function(t){ %>
          <div href="#" class="list-group-item">
            <p class="pull-right"><%= new Date(t.created_at).onlyTime() %></p>
            <h4 class="list-group-item-heading"><%= t.username; %></h4>
            <p class="list-group-item-text"><%= t.tweet; %></p>
            <a href="<%= '/tweet/' + t.id; %>">Voir le tweet</a>

          </div>
        <% }) %>
      </div>

    </div><!-- /.container -->


    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>

<!DOCTYPE html>
<html ng-app="twitter">
  <head>
    <meta charset="utf-8">
    <title></title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/dist/css/main.css">
  </head>
  <body>

    <% include shared/menu %>

    <div class="container">
      <div class="list-group" ng-controller="TimelineController">
        <div class="list-group-item">
          <form method="post" class="form-horizontal"
                ng-controller="PublishController">
            <div class="form-group">
              <label>Tweet</label>
              <textarea name="tweet" class="form-control"
                        ng-model="twt.tweet"></textarea>
            </div>

            <div class="input-group">
              <button type="button" class="btn btn-primary"
                      ng-click="sendTweet()">Tweeter</button>
            </div>
          </form>
        </div>

        <div href="#" class="list-group-item" ng-repeat="t in tweets | filter: search">
          <div class="pull-right">

            <p>{{ t.created_at | date:'HH:mm:ss' }}</p>
            <button type="button"
                    class="btn btn-danger"
                    ng-click="deleteTweet(t)">
                    <span class="glyphicon glyphicon-trash"></span>
            </button>
          </div>
          <h4 class="list-group-item-heading">{{ t.user.username }}</h4>
          <p class="list-group-item-text">{{ t.tweet }}</p>
          <a href="{{ '/tweet/' + t._id }}">Voir le tweet</a>

        </div>

      </div>



    </div><!-- /.container -->


    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/public\dist\js\angular.min.js" type="text/javascript"></script>
    <script src="/public/app/app.module.js"></script>
  </body>
</html>
